mount -o remount,rw /
mount -o remount,rw rootfs
mount -o remount,rw /system
busybox mount -o remount,rw /
busybox mount -o remount,rw rootfs
busybox mount -o remount,rw /system

LS=/system/etc/L_SPEED/00L_STUFF/LOGS/Lesser_cache_reclaiming.log

busybox rm -f $LS
busybox touch $LS

busybox echo "# L Speed log" | tee -a $LS
busybox echo "" | tee -a $LS
busybox echo "$( date +"%m-%d-%Y %H:%M:%S" ) Lesser cache reclaiming activating" | tee -a $LS

busybox sleep 10

	busybox chmod 644 /proc/sys/vm/*
	busybox sysctl -e -w vm.vfs_cache_pressure=10

busybox echo "" | tee -a $LS
busybox echo "$( date +"%m-%d-%Y %H:%M:%S" ) Lesser cache reclaiming activated" | tee -a $LS
